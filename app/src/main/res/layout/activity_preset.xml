<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_preset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tenniscounter.Preset"
    android:orientation="vertical">

    <EditText
        android:hint="@string/playerA"
        android:id="@+id/localPlayer"
        style="@style/editText"/>
    <EditText
        android:hint="@string/playerB"
        android:id="@+id/visitorPlayer"
        style="@style/editText"/>
    <TextView
        style="@style/numberOfsetsText"
        android:text="@string/set" />
    <RadioGroup
        style="@style/horizontalAndMatch"
        android:id="@+id/radioSet"
        >
        <RadioButton
            style="@style/radioButton"
            android:id="@+id/set1"
            android:text="@string/a1"

            />
        <RadioButton
            style="@style/radioButton"
            android:text="@string/a3"
            android:id="@+id/set3"
            />
        <RadioButton
            style="@style/radioButton"
            android:text="@string/a5"
            android:id="@+id/set5"
            />
    </RadioGroup>
    <ImageView
        style="@style/raquetaImageView"
        android:src="@drawable/raqueta"/>
    <Button
        style="@style/buttonStyle"
        android:text="@string/start"
        android:id="@+id/button"/>

</LinearLayout>
